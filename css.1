/* pages/Home.css */

/* HERO SECTION */
.hero-section {
    position: relative;
    height: 90vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
}

.hero-background-img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    background-size: cover;
    background-position: center;
    /* Optional: add a subtle dark filter/tint */
    opacity: 0.4;
    min-height: 90vh;
}

.hero-content {
    position: relative;
    z-index: 10;
    max-width: 900px;
    padding-top: 5rem;
}

.hero-headline {
    font-size: 4rem;
    margin-bottom: 1rem;
    line-height: 1.1;
    color: var(--text-highlight-white);
}

.hero-subheadline {
    font-size: 1.3rem;
    font-weight: 300;
    margin-bottom: 3rem;
    color: var(--accent-light-grey);
}

.hero-ctas {
    display: flex;
    justify-content: center;
    gap: 2rem;
}

/* ANIMATED STATISTICS SECTION */
.stats-section {
    background-color: var(--secondary-dark);
}

.stats-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
    text-align: center;
}

.stat-value {
    font-size: 3rem;
    color: var(--accent-teal);
    margin-bottom: 0.5rem;
}

.stat-label {
    font-size: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-weight: 500;
}

/* SCROLLING SERVICE CARDS SECTION */
.services-overview {
    background-color: var(--primary-dark);
}

.subtitle {
    font-size: 1.1rem;
    color: var(--accent-light-grey);
    margin-bottom: 3rem;
}

.service-cards-scroll {
    display: flex;
    overflow-x: auto;
    gap: 2rem;
    padding: 1rem 0;
    /* Hide scrollbar on certain browsers for a clean look */
    -ms-overflow-style: none; /* IE and Edge */
    scrollbar-width: none; /* Firefox */
}
.service-cards-scroll::-webkit-scrollbar {
    display: none; /* Chrome, Safari */
}

.service-card {
    min-width: 300px;
    background-color: var(--secondary-dark);
    padding: 2rem;
    border-radius: 12px;
    border-top: 3px solid var(--accent-teal);
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.service-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(46, 230, 214, 0.2);
}

.service-icon-placeholder {
    height: 60px;
    width: 60px;
    margin: 0 auto 1rem;
    border-radius: 50%;
}

.service-card h3 {
    color: var(--accent-teal);
    margin-bottom: 0.5rem;
}

.read-more {
    color: var(--accent-teal);
    text-decoration: none;
    font-weight: 600;
    margin-top: 1rem;
    display: block;
}

/* WHY CHOOSE US (PARALLAX) */
.why-choose-us-parallax {
    position: relative;
    /* This background is for the parallax effect, typically using 'background-attachment: fixed;' */
    background-image: url('parallax_background_image.jpg'); /* Placeholder image name */
    background-attachment: fixed; 
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    min-height: 500px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
}

.parallax-background {
    /* Set min-height to enable background attachment: fixed in CSS */
    min-height: 500px; 
    opacity: 0.7;
}

.parallax-content {
    position: relative;
    z-index: 2;
    background: rgba(15, 23, 42, 0.8); /* Semi-transparent secondary dark background */
    padding: 3rem;
    border-radius: 10px;
}

.parallax-content h2 {
    color: var(--accent-teal);
}

.parallax-content p {
    font-size: 1.2rem;
    margin-bottom: 2rem;
}

/* FINAL CTA SECTION */
.final-cta-section {
    background-color: var(--secondary-dark);
}

.final-cta-section h3 {
    font-size: 2.5rem;
    color: var(--text-highlight-white);
}

.final-cta-section p {
    margin-bottom: 2rem;
}

/* Responsive Adjustments */
@media (max-width: 768px) {
    .hero-headline {
        font-size: 2.5rem;
    }
    .hero-subheadline {
        font-size: 1.1rem;
    }
    .hero-ctas {
        flex-direction: column;
        gap: 1rem;
    }
    .stats-grid {
        grid-template-columns: 1fr 1fr;
    }
    .section-padding {
        padding: 4rem 0;
    }
}